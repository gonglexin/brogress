<div class="clearfix">
  <div class="user">
    <%= user_image_tag(@user) %>
  </div>
  <div class="info">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <% if @user == current_user %>
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
      <%= link_to 'Edit', edit_user_path(@user) %> |
    <% end %>
    <%= link_to 'Back', users_path %>
  </div>
</div>

<div class="clearfix">
  <%= link_to_function 'Image View', "$('#list').hide(); $('#image').show()" %> |
  <%= link_to_function 'List View',  "$('#image').hide(); $('#list').show()"%>

  <% items = @user == current_user ? @user.items.reversed : @user.items.published.reversed  %>
  <div id="list">
    <%= render partial: 'items/item_progress', collection: items, as: :item %>
  </div>
  <div id="image" style="display: none;">
    <%= render items %>
  </div>
</div>
