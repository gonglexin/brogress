<div class="user">
  <%= user_image_tag(@user) %>
</div>
<div class="info">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <% if @user == current_user %>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <%= link_to 'Edit', edit_user_path(@user) %> |
  <% end %>
  <%= link_to 'Back', users_path %>
</div>

<div class="clear"></div>
<%= link_to_function 'Image View', "$('#list').hide(); $('#image').show()" %> |
<%= link_to_function 'List View',  "$('#image').hide(); $('#list').show()"%>

<% items = @user == current_user ? @user.items : @user.items.published  %>
<div id="list" style="dispaly: none;">
  <%= render partial: 'items/item_progress', collection: items, as: :item %>
</div>
<div id="image" style="display: none;">
  <%= render items %>
</div>
<div class="clear"></div>
